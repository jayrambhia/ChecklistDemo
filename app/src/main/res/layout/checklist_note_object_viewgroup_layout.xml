<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="5dp"
    android:weightSum="1"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:layout_gravity="top|left"
        android:src="@mipmap/ic_add_grey600_24dp"
        android:id="@+id/checklist_imageview"/>

    <com.fenchtose.checklistdemo.views.CheckListEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:hint="List item"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="@color/color_accent"
        android:id="@+id/checklist_edittext"
        android:inputType="textCapSentences|textMultiLine|textEmailSubject"
        android:maxLength="140"
        android:background="@drawable/edittext_transp_complete"
        android:textColorHint="@color/dim_foreground_disabled_material_light"
        android:textColor="@color/green_primary"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:layout_gravity="right"
        android:layout_marginTop="3dp"
        android:scaleType="center"
        android:visibility="gone"
        android:id="@+id/checklist_remove_button"
        android:src="@mipmap/ic_cancel_black_18dp"/>


</LinearLayout>